

@{ var name = ViewBag.usernae_secc;
    var roleid = ViewBag.RoleId;
    var id = ViewBag.id;}
<style>
    .signin-content {
        margin: 20px auto;
        width: 100%;
        max-width: 40%;
        padding: 24px 80px;
        height: 100%;
        background-color: transparent;
        box-shadow: 7px 8px 14px 3px rgb(0 0 0 / 30%);
        border-radius: 60px;
    }
</style>
@if (id == null)
{
    <section class="clients bg-theme-colored" hidden>




        <!-- Start Contact Us  -->
        <div class="contact-box-main">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-sm-12">
                        <div class="contact-form-right">
                            <form asp-controller="Home" asp-action="Creattest">
                                <div class="row">


                                    <div class="form-group">
                                        <label style="text-align: center !important; font-weight: bold;">Review</label>
                                        <select class="form-control" id="Reviwe" name="Reviwe">
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                    </div>

                                    <div class="signin-content">
                                        <div class="form-group">
                                            <label style="text-align: center !important; font-weight: bold;">ContactText</label>

                                            <textarea class="form-control" id="ContactText" name="ContactText" placeholder="Your Message" rows="4" data-error="Write your message" required></textarea>
                                            <div class="help-block with-errors"></div>
                                        </div>

                                        <div class="submit-button text-center">
                                            <button class="btn hvr-hover" id="submit" type="submit">Send Message</button>

                                        </div>

                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>                    <!-- End Cart -->

    </section>
}
