@model task_two.Models.Prodact
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Prodact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProdact" />
            <div class="form-group">
                <label asp-for="NameProdact" class="control-label"></label>
                <input asp-for="NameProdact" class="form-control" />
                <span asp-validation-for="NameProdact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Describtion" class="control-label"></label>
                <input asp-for="Describtion" class="form-control" />
                <span asp-validation-for="Describtion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Units" class="control-label"></label>
                <input asp-for="Units" class="form-control" />
                <span asp-validation-for="Units" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="IdCategory" class="control-label"></label>

                @Html.DropDownListFor(model => model.IdCategory, ViewBag.IdCategory as SelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

