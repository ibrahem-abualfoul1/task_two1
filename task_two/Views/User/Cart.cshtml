@model Tuple<IEnumerable<task_two.Models.Prodact>, IEnumerable<task_two.Models.Cart>>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ var name = ViewBag.usernae_secc;
    var roleid = ViewBag.RoleId;
    var id = ViewBag.id;}

<table class="table">
    <thead>
        <tr>
            <th>
                id
            </th>
            <th>
                NameProdact
            </th>
            <th>
                Units
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item2)
        {
            @if (item.id_user == id)
            {
                @if (item.order == false)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CartProdactTrans.NameProdact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CartProdactTrans.Units)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CartProdactTrans.Price)
                        </td>

                    </tr>
                }

            }

        }

    <td>
        <a class="btn btn-flat btn-theme-colored mt-15 text-theme-color-2" asp-action="buy" asp-route-c="@id">Read More</a>
    </td>
    </tbody>
</table>
